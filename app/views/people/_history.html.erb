  <table class="table">
    <% person.versions.each do |version| %>
      <tr>
        <td><%= t version.event %></td>
        <td>
          <% version.changeset.each do |change| %>
            <% if change[1][0].class == Time %>
              <%= change[0] %>:
                <%= localize change[1][0], :format => :short %>
                =>
                <%= localize change[1][1], :format => :short %>
            <% else %>
              <%= t change[0] %>: <%= change[1][0] %> => <%= change[1][1] %> <%= change[1][0].class %>
            <% end %>
            <br>
              
          <% end %>
        </td>
        
      </tr>
    <% end %>
  </table>
  