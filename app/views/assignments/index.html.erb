<p id="notice"><%= notice %></p>

<h1>Listing assignment</h1>

<table class="table">
  <thead>
    <tr>
      <th>Person</th>
      <th>Course</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.person %></td>
        <td><%= assignment.group %></td>
        <td><%= assignment.role_type %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Remove', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

