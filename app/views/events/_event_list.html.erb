<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Location</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Coursestate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%# course.course_type.try(:description) %>
            <%= course.title %></td>
        <td><%= course.location %></td>
        <td><%= course.startdate %></td>
        <td><%= course.enddate %></td>
        <td><%= course.course_state %></td>
        
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <td><%= link_to 'Subscribe to course', new_assignment_path(person: current_user, course: course), {class: "btn btn-default"} %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
