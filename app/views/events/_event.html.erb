<div  class="col-sm-5">
  <h3>Course Information</h3>

  <%= horizontal_form @event do |f| %>
    <%= f.association :event_type %>
    <%= f.input :id, readonly: true %>
    <%= f.input :title %>
    <%= f.input :shortname %>
    <%= f.association :location %>
    <%= f.input :startdate, :include_blank => true %>
    <%= f.input :enddate,   :include_blank => true %>
    <%= f.input :event_state, collection: Event::STATUSES %>
    <%= f.button :submit %>
  <% end %>
</div>
