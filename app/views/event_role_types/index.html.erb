
<h1>Role Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @role_types.each do |role_type| %>
      <tr>
        <td><%= role_type.description %></td>
        <td><%# link_to 'Show', role_type %></td>
        <td><%= link_to I18n.t('views.edit'), edit_event_role_type_path(role_type) %></td>
        <td><%= link_to I18n.t('views.destroy'), role_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('views.new') + ' Role type', new_event_role_type_path %>
