<table class="table">
  <thead>
    <tr>
      <th>Shortname</th>
      <th>Title</th>
      <th>Region</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.shortname %></td>
        <td><%= team.title %></td>
        <td><%= team.region %></td>
        <td><%= team.startdate %></td>
        <td><%= team.enddate %></td>

        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <td><%= link_to 'Show', team %></td>
            <td><%# link_to 'Edit', edit_event_path(event) %></td>
            <td><%# link_to 'Destroy', event, method: :delete data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
